CC:= gcc
CFLAGS:= -Wall
KMP_OBJ:= src/kmp.o
KMP_TARGET:= kmp
MANIPULATION_OBJ:= src/manipulation.o
MANIPULATION_TARGET:= manipulation
REPLACE_STRING_OBJ:= src/replace_string.o
REPLACE_STRING_TARGET:= replace
STRING_QUERIES_OBJ:= src/string_query.o
STRING_QUERIES_TARGET:= query

all: $(KMP_TARGET) $(MANIPULATION_TARGET) $(REPLACE_STRING_TARGET) $(STRING_QUERIES_TARGET)

$(KMP_TARGET):$(KMP_OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

$(MANIPULATION_TARGET):$(MANIPULATION_OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

$(REPLACE_STRING_TARGET):$(REPLACE_STRING_OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

$(STRING_QUERIES_TARGET):$(STRING_QUERIES_OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

clean:
	rm -f $(KMP_TARGET) $(KMP_OBJ) $(MANIPULATION_TARGET) $(MANIPULATION_OBJ) $(REPLACE_STRING_TARGET) $(REPLACE_STRING_OBJ) $(STRING_QUERIES_TARGET) $(STRING_QUERIES_OBJ)